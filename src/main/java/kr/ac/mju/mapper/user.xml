<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.mju.dao.userinfoDAO">

<!-- parameterType:마이바티스에게 전달하는 객체 또는 자료형 -->

	<select id = "selectAll" resultType = "kr.ac.mju.model.user_info">
		select * from user_info;
	</select>

	<insert id = "join" parameterType = "kr.ac.mju.model.user_info" useGeneratedKeys = "true" keyProperty = "id">
		INSERT INTO user_info (name, email, password, description, photo) VALUES (#{name}, #{email}, #{password}, #{description}, #{photo});
	</insert>

	<select id = "loginCheck" resultType = "kr.ac.mju.model.user_info" parameterType = "kr.ac.mju.model.user_info">
		select * from user_info where email = #{email} and password = #{password};
	</select>

	<select id = "search_member" resultType = "kr.ac.mju.model.user_info" parameterType = "string">
		select * from user_info where email like CONCAT('%',#{search_keyword},'%');
	</select>

